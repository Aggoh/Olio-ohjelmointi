<Page
    x:Class="AppT2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppT2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <TextBox x:Name="markkaTextBox" HorizontalAlignment="Left" Margin="233,224,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="markkaTextBox_TextChanged"/>
        <TextBox x:Name="euroTextBox" HorizontalAlignment="Left" Margin="233,312,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.523,-1.942" Width="64" TextChanged="euroTextBox_TextChanged"/>
        <TextBlock x:Name="markkatextBlock" HorizontalAlignment="Left" Margin="312,224,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="149">
        	<Run Text="Markat"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <TextBlock x:Name="eurotextBlock" HorizontalAlignment="Left" Margin="312,312,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="32" Width="122">
        	<Run Text="Eurot"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>

    </Grid>
</Page>
